.circle-wrapper
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	display flex
	justify-content center
	align-items center

.circle
	border-radius 50%
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
	background rgba(#fff, 0.1)

.video-sm
